<div class="menu_box" id="menu_box_id">
	<div style="padding-left: 50px; display: inline-block;">
		<p style="padding-top: 30px; font-size: 30px;">登入</p>
		<%= form_tag sessions_path do %>
			<p><%= label_tag "姓名" %></p><p><%= text_field_tag :name %></p>
			<p><%= label_tag "密碼" %></p><p><%= password_field_tag :password %></p>
			<p><%= submit_tag "登入" %> | <%= link_to "我要註冊", sign_up_path %> | <%= link_to "取消登入", menu_path %></p>
		<% end %>
	</div>
	<div style="position: absolute; margin-top: 100px; display: inline-block;">
		<% if flash.any? %>
			<h4 style="padding-left: 30px;">姓名或密碼錯誤</h4>
			<ul>
				<% flash.each do |a,b| %>
					<li><%= b %></li>
				<% end %>
			</ul>
		<% end %>
	</div>

</div>